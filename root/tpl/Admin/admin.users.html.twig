                        {#</tr>#}
                    {#{% endfor %}#}
                {#</table>#}
            </div>
            <div class="span2">
            </div>
        </div>
    </div>

    <div id="userEditModal" class="modal fade">
        <div class="modal-header">Редактирование пользователя</div>
        <div class="modal-body">
            <div class="form-horizontal">
                <div class="control-group">
                    <div class="control-label">Логин</div>
                    <div class="controls">
                        <input type="text" name="login">
                    </div>
                </div>
                <hr>
                <div class="control-group">
                    <div class="control-label">Имя</div>
                    <div class="controls">
                        <input type="text" name="name">
                    </div>
                </div>
                <hr>
                <div class="control-group">
                    <div class="control-label">Фамилия</div>
                    <div class="controls">
                        <input type="text" name="surname">
                    </div>
                </div>
                <hr>
                <div class="control-group">
                    <div class="control-label">Email</div>
                    <div class="controls">
                        <input type="text" name="email">
                    </div>
                </div>
                <hr>
                <div class="control-group">
                    <div class="control-label">Роль</div>
                    <div class="controls">
                        <input type="text" name="role">
                    </div>
                </div>
                <hr>
                <div class="control-group">
                    <div class="control-label">Дата регистрации</div>
                    <div class="controls">
                        <span name="date_register"></span>
                    </div>
                </div>
                <hr>
                <div class="control-group">
                    <div class="control-label">Дата последнего входа</div>
                    <div class="controls">
                        <span name="date_last"></span>
                    </div>
                </div>
                <hr>
                <div class="control-group">
                    <div class="control-label">Подтвержден</div>
                    <div class="controls">
                        <span name="confirmed"></span>
                    </div>
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <div class="control-group">
                <div class="controls">
                    <input type="button" name="submit" value="Сохранить" class="btn"/>
                </div>
            </div>
        </div>
    </div>
{% endblock %}