    <link rel="stylesheet" href="/web/css/admin_style.css">
{% endblock %}

{% block pageContent %}
    {% include 'Admin/admin.top_panel.html.twig' %}

    <div class="container-fluid main-container">
        <div class="row-fluid">
            <div class="span2">
            </div>
            <div class="span8" id="users-table">
                {#<table class="table table-bordered">#}
                    {#<tr>#}
                        {#<td><b>Id</b></td><td><b>Имя</b></td><td><b>Фамилия</b></td><td><b>Email</b></td><td><b>Роль</b></td><td><b>Действия</b></td>#}
                    {#</tr>#}
                    {#{% for user in users %}#}
                        {#<tr>#}
                            {#<td><b>{{ user.id }}</b></td>#}
                            {#<td><b>{{ user.name }}</b></td>#}
                            {#<td><b>{{ user.surname }}</b></td>#}
                            {#<td><b>{{ user.email }}</b></td>#}
                            {#<td><b>{{ user.role }}</b></td>#}
