<div class="loginForm">
            <h1>Вход:</h1>
            <form action="/login_check/" method="post" class="horizontal-form">
                <div class="control-group">
                    <div class="controls">
                        <input type="text" class="input-large" placeholder="Логин" name="login">
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <input type="password" class="input-large" placeholder="Пароль" name="pass">
                    </div>
                </div>
                <div class="control-group">
                    <div class="controls">
                        <button type="submit" class="btn input-small">Войти</button>
                        <a href="/signup/" class="btn btn-primary pull-right">Регистрация</a>
                    </div>
                </div>
            </form>  
        </div>

		
		